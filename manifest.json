{
  "manifest_version": 3,
  "name": "Threads Quick Blocker",
  "version": "1.0",
  "description": "Quickly block users on Threads directly from their posts.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "threads-quick-blocker@mizuyun.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "*://*.threads.net/*",
    "*://*.threads.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.threads.net/*",
        "*://*.threads.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}